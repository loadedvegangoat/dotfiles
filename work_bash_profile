# Aliases

alias cfs_yale_connect='mount -t smbfs //rtc29@cfs.yale.edu/home ~/temp/'

alias cfs_yale_disconnect='umount ~/temp'



# Bash Complettoin
if [[ -f ~/.nix-profile/share/bash-completion/bash_completion ]]; then 
    . ~/.nix-profile/share/bash-completion/bash_completion
fi

# Add Nix binaries to path
export PATH=~/.nix-profile/bin:$PATH

# Nix Installed
alias ls='~/.nix-profile/bin/lsd'
alias vim='~/.nix-profile/bin/vim'
alias git='~/.nix-profile/bin/git'
alias xargs='~/.nix-profile/xargs'
alias bash='~/.nix-profile/bin/bash'

# Add Brews to Path
#export PATH=$(brew --prefix)/bin:$PATH
#export PATH=$(brew --prefix)/sbin:$PATH
#export PATH=$(brew --prefix)/opt/findutils/libexec/gnubin:$PATH


# Python 3.11 Path
alias python3='~/.nix-profile/bin/python3'
PATH="~/.local/bin:${PATH}"


#export PATH
. "$HOME/.cargo/env"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion


# FSL Config
FSLDIR=/usr/local/fsl
. ${FSLDIR}/etc/fslconf/fsl.sh
PATH=${FSLDIR}/bin:${PATH}
export FSLDIR PATH

